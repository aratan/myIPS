package main

import (
	"fmt"

	"github.com/google/gopacket/pcap"
)

func main() {
	devices, err := pcap.FindAllDevs()
	if err != nil {
		panic(err)
	}

	for _, device := range devices {
		fmt.Println("Nombre:", device.Name)
		fmt.Println("Descripci√≥n:", device.Description)
		fmt.Println()
	}
}
